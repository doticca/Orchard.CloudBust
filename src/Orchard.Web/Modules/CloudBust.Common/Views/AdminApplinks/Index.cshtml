@model CloudBust.Common.ViewModels.ApplinksFileViewModel

<h1>@Html.TitleForPage(T("Manage apple-app-site-association File").ToString())</h1>
@Html.ValidationSummary()
@using (Html.BeginFormAntiForgeryPost()) {
	<fieldset>
		<div>
			<label for="@Html.FieldIdFor(m => m.Text)">@T("apple-app-site-association Content")</label>
			@Html.TextAreaFor(m => m.Text, new { @class = "textMedium", rows = "16" })
			@Html.ValidationMessage("Text", "*")
			<span class="hint">@T("The default text provided is an empty json like text file")</span>
		</div>
	</fieldset>
	<button class="primaryAction" type="submit">@T("Save apple-app-site-association")</button>
}