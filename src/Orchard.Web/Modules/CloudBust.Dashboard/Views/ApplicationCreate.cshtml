@using CloudBust.Dashboard
@using Orchard.Users.Models
@using Orchard.Security

@model CloudBust.Dashboard.ViewModels.ApplicationCreateViewModel
@{

    
}


<div class="dashboardarea">
    <div class="row bump-25">
        <h1 class="header-apps subhead">


            Add an app
            <div><small>Add a new CloudBust application, generate an app token, implement the SDK and create new content</small></div>
        </h1>
        <hr />
    </div>
    @using (Html.BeginFormAntiForgeryPost())
    {
        <div class="row">
            <div class="large-3 columns">
                <label for="Name">
                    Name
                    <input id="Name" name="Name" type="text" placeholder="enter application name" value="@Model.Name" />
                </label>
            </div>
            <div class="large-9 columns">
                <div class="panel callout radius">
                    <h5>information</h5>
                    <div class="row">
                        <div class="large-12 columns">
                            If you use single sign on with facebook, you have to set your application name exactly the same with your facebook application name.
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label for="Description">
                    Description
                    <input id="Description" name="Description" type="text" placeholder="enter application description" value="@Model.Description" />
                </label>
            </div>
        </div>
        
        <div class="row">
            <div class="columns">
                <input type="submit" class="button" name="submit.Save" value="Save">
                <a href="~/dashboard/" class="button secondary">Cancel</a>
            </div>
        </div>
        <div class="row bump-25"></div>
    }

</div>

