@using CloudBust.Resources.ViewModels;
@model DropzoneSettingsViewModel

<fieldset class="dropzone">
    <legend>@T("Dropzone")</legend>
    <span class="hint">Your version of Dropzone.js is 4.0 visit http://www.dropzonejs.com/ for Documentation and Examples</span>
    <div>
        @Html.EditorFor(m => m.AutoEnable)
        <label class="forcheckbox" for="DropzoneSettings_AutoEnable">@T("Auto Enable")</label>
        <span class="hint">@T("it enables dropzone script on every page header.")</span>
    </div>
    <div data-controllerid="DropzoneSettings_AutoEnable" data-defaultstate="visible">
        @Html.EditorFor(m => m.AutoEnableAdmin)
        <label class="forcheckbox" for="DropzonekSettings_AutoEnableAdmin">@T("Auto Enable Admin")</label>
        <span class="hint">@T("it enables dropzone script on admin pages header.")</span>
    </div>
</fieldset>

@using (Script.Foot())
{
    <script type="text/javascript">
        // hack to make the base.js script work with controller ids
        (function ($) {
            $(document).ready(function () {
                $(".dropzone").find("input[name='DropzoneSettings.AutoEnable']").click().click();
            });
        })(jQuery);
    </script>
}