@using CloudBust.Resources.ViewModels;
@model ElegantIconSettingsViewModel

<fieldset class="eleganticon">
    <legend>@T("ElegantIcon")</legend>
    <span class="hint">Your version of elegant-icon.css is (original release) visit https://github.com/josephnle/elegant-icons for Documentation and Examples</span>
    <div>
        @Html.EditorFor(m => m.AutoEnable)
        <label class="forcheckbox" for="ElegantIconSettings_AutoEnable">@T("Auto Enable")</label>
        <span class="hint">@T("it enables eleganticon stylesheet on every page header.")</span>
    </div>
    <div data-controllerid="ElegantIconSettings_AutoEnable" data-defaultstate="visible">
        @Html.EditorFor(m => m.AutoEnableAdmin)
        <label class="forcheckbox" for="ElegantIconSettings_AutoEnableAdmin">@T("Auto Enable Admin")</label>
        <span class="hint">@T("it enables eleganticon stylesheet on admin pages header.")</span>
    </div>
</fieldset>

@using (Script.Foot())
{
    <script type="text/javascript">
        // hack to make the base.js script work with controller ids
        (function ($) {
            $(document).ready(function () {
                $(".eleganticon").find("input[name='ElegantIconSettings.AutoEnable']").click().click();
            });
        })(jQuery);
    </script>
}