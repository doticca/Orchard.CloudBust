@using CloudBust.Resources.ViewModels;
@model FontAwesomeSettingsViewModel

<fieldset class="fontawesome">
    <legend>@T("FontAwesome")</legend>
    <span class="hint">Your version of FontAwesome.css is 4.7.0 visit http://fontawesome.io/ for Documentation and Examples</span>
    <div>
        @Html.EditorFor(m => m.AutoEnable)
        <label class="forcheckbox" for="FontAwesomeSettings_AutoEnable">@T("Auto Enable")</label>
        <span class="hint">@T("it enables fontawesome stylesheet on every page header.")</span>
    </div>
    <div data-controllerid="FontAwesomeSettings_AutoEnable" data-defaultstate="visible">
        @Html.EditorFor(m => m.AutoEnableAdmin)
        <label class="forcheckbox" for="FontAwesomeSettings_AutoEnableAdmin">@T("Auto Enable Admin")</label>
        <span class="hint">@T("it enables fontawesome stylesheet on admin pages header.")</span>
    </div>
</fieldset>

@using (Script.Foot())
{
    <script type="text/javascript">
        // hack to make the base.js script work with controller ids
        (function ($) {
            $(document).ready(function () {
                $(".fontawesome").find("input[name='FontAwesomeSettings.AutoEnable']").click().click();
            });
        })(jQuery);
    </script>
}