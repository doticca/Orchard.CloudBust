@using CloudBust.Resources.ViewModels;
@model IziModalSettingsViewModel

<fieldset class="izimodal">
    <legend>@T("IziModal")</legend>
    <span class="hint">Your version of IziModal.js is 1.6.0 visit http://izimodal.marcelodolce.com/ for Documentation</span>
    <div>
        @Html.EditorFor(m => m.AutoEnable)
        <label class="forcheckbox" for="IziModalSettings_AutoEnable">@T("Auto Enable")</label>
        <span class="hint">@T("it enables IziModal script on every page header.")</span>
    </div>
    <div data-controllerid="IziModalSettings_AutoEnable" data-defaultstate="visible">
        @Html.EditorFor(m => m.AutoEnableAdmin)
        <label class="forcheckbox" for="IziModalSettings_AutoEnableAdmin">@T("Auto Enable Admin")</label>
        <span class="hint">@T("it enables IziModal script on admin pages header.")</span>
    </div>
</fieldset>

@using (Script.Foot())
{
    <script type="text/javascript">
        // hack to make the base.js script work with controller ids
        (function ($) {
            $(document).ready(function () {
                $(".izimodal").find("input[name='IziModalSettings.AutoEnable']").click().click();
            });
        })(jQuery);
    </script>
}