@using CloudBust.Resources.ViewModels;
@model IziToastSettingsViewModel

<fieldset class="izitoast">
    <legend>@T("IziToast")</legend>
    <span class="hint">Your version of IziToast.js is 1.3.0 visit http://izitoast.marcelodolce.com/ for Documentation</span>
    <div>
        @Html.EditorFor(m => m.AutoEnable)
        <label class="forcheckbox" for="IziToastSettings_AutoEnable">@T("Auto Enable")</label>
        <span class="hint">@T("it enables IziToast script on every page header.")</span>
    </div>
    <div data-controllerid="IziToastSettings_AutoEnable" data-defaultstate="visible">
        @Html.EditorFor(m => m.AutoEnableAdmin)
        <label class="forcheckbox" for="IziToastSettings_AutoEnableAdmin">@T("Auto Enable Admin")</label>
        <span class="hint">@T("it enables IziToast script on admin pages header.")</span>
    </div>
</fieldset>

@using (Script.Foot())
{
    <script type="text/javascript">
        // hack to make the base.js script work with controller ids
        (function ($) {
            $(document).ready(function () {
                $(".izitoast").find("input[name='IziToastSettings.AutoEnable']").click().click();
            });
        })(jQuery);
    </script>
}