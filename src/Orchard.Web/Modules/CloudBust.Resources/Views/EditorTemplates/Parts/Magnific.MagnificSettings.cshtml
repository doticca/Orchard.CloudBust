@using CloudBust.Resources.ViewModels;
@model MagnificSettingsViewModel

<fieldset class="magnific">
    <legend>@T("Magnific")</legend>
    <span class="hint">Your version of Magnific.js is 1.1.0 visit http://dimsemenov.com/plugins/magnific-popup/ for Documentation and Examples</span>
    <div>
        @Html.EditorFor(m => m.AutoEnable)
        <label class="forcheckbox" for="MagnificSettings_AutoEnable">@T("Auto Enable")</label>
        <span class="hint">@T("it enables magnific script on every page header.")</span>
    </div>
    <div data-controllerid="MagnificSettings_AutoEnable" data-defaultstate="visible">
        @Html.EditorFor(m => m.AutoEnableAdmin)
        <label class="forcheckbox" for="MagnificSettings_AutoEnableAdmin">@T("Auto Enable Admin")</label>
        <span class="hint">@T("it enables magnific script on admin pages header.")</span>
    </div>
</fieldset>

@using (Script.Foot())
{
    <script type="text/javascript">
        // hack to make the base.js script work with controller ids
        (function ($) {
            $(document).ready(function () {
                $(".magnific").find("input[name='MagnificSettings.AutoEnable']").click().click();
            });
        })(jQuery);
    </script>
}