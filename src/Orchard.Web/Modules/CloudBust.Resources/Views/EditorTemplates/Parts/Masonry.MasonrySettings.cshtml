@using CloudBust.Resources.ViewModels;
@model MasonrySettingsViewModel

<fieldset class="masonry">
    <legend>@T("Masonry")</legend>
    <span class="hint">Your version of Slick.js is 1.5.7 visit http://kenwheeler.github.io/slick/ for Documentation and Examples</span>
    <div>
        @Html.EditorFor(m => m.AutoEnable)
        <label class="forcheckbox" for="MasonrySettings_AutoEnable">@T("Auto Enable")</label>
        <span class="hint">@T("it enables slick script on every page header.")</span>
    </div>
    <div data-controllerid="MasonrySettings_AutoEnable" data-defaultstate="visible">
        @Html.EditorFor(m => m.AutoEnableAdmin)
        <label class="forcheckbox" for="MasonrySettings_AutoEnableAdmin">@T("Auto Enable Admin")</label>
        <span class="hint">@T("it enables slick script on admin pages header.")</span>
    </div>
</fieldset>

@using (Script.Foot())
{
    <script type="text/javascript">
        // hack to make the base.js script work with controller ids
        (function ($) {
            $(document).ready(function () {
                $(".slick").find("input[name='MasonrySettings.AutoEnable']").click().click();
            });
        })(jQuery);
    </script>
}