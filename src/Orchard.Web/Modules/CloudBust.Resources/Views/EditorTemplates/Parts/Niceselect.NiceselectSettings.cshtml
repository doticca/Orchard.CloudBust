@using CloudBust.Resources.ViewModels;
@model NiceselectSettingsViewModel

<fieldset class="niceselect">
    <legend>@T("Niceselect")</legend>
    <span class="hint">Your version of Niceselect.js is 1.0 visit http://hernansartorio.com/jquery-nice-select/ for Documentation and Examples</span>
    <div>
        @Html.EditorFor(m => m.AutoEnable)
        <label class="forcheckbox" for="NiceselectSettings_AutoEnable">@T("Auto Enable")</label>
        <span class="hint">@T("it enables niceselect script on every page header.")</span>
    </div>
</fieldset>