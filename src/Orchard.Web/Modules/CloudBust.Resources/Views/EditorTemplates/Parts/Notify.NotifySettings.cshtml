@using CloudBust.Resources.ViewModels;
@model NotifySettingsViewModel

<fieldset class="notify">
    <legend>@T("Notify")</legend>
    <span class="hint">Your version of Notify.js is 0.4.2 visit https://notifyjs.com/ for Documentation</span>
    <div>
        @Html.EditorFor(m => m.AutoEnable)
        <label class="forcheckbox" for="NotifySettings_AutoEnable">@T("Auto Enable")</label>
        <span class="hint">@T("it enables notify script on every page header.")</span>
    </div>
    <div data-controllerid="NotifySettings_AutoEnable" data-defaultstate="visible">
        @Html.EditorFor(m => m.AutoEnableAdmin)
        <label class="forcheckbox" for="NotifySettings_AutoEnableAdmin">@T("Auto Enable Admin")</label>
        <span class="hint">@T("it enables notify script on admin pages header.")</span>
    </div>
</fieldset>

@using (Script.Foot())
{
    <script type="text/javascript">
        // hack to make the base.js script work with controller ids
        (function ($) {
            $(document).ready(function () {
                $(".notify").find("input[name='NotifySettings.AutoEnable']").click().click();
            });
        })(jQuery);
    </script>
}