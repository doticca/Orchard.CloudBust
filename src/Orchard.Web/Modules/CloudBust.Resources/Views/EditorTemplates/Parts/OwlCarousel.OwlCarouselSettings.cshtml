@using CloudBust.Resources.ViewModels;
@model OwlCarouselSettingsViewModel

<fieldset class="owlcarousel">
    <legend>@T("OwlCarousel")</legend>
    <span class="hint">Your version of OwlCarousel is 1.3.3 visit http://owlcarousel2.github.io/OwlCarousel2/ for Documentation and Examples</span>
    <div>
        @Html.EditorFor(m => m.AutoEnable)
        <label class="forcheckbox" for="OwlCarouselSettings_AutoEnable">@T("Auto Enable")</label>
        <span class="hint">@T("it enables owlcarousel library on every page.")</span>
    </div>
    <div data-controllerid="OwlCarouselSettings_AutoEnable" data-defaultstate="visible">
        @Html.EditorFor(m => m.AutoEnableAdmin)
        <label class="forcheckbox" for="OwlCarouselSettings_AutoEnableAdmin">@T("Auto Enable Admin")</label>
        <span class="hint">@T("it enables owlcarousel library on admin pages. Do this only if you are an admin theme developer")</span>
    </div>
</fieldset>

@using (Script.Foot())
{
    <script type="text/javascript">
        // hack to make the base.js script work with controller ids
        (function ($) {
            $(document).ready(function () {
                $(".owlcarousel").find("input[name='OwlCarouselSettings.AutoEnable']").click().click();
            });
        })(jQuery);
    </script>
}