@model Orchard.Environment.Configuration.ShellSettings
@using CloudBust.Tenants.Extensions;

@using(Html.BeginFormAntiForgeryPost(Url.Action("Enable", new {area = "CloudBust.Tenants"}), FormMethod.Post, new { @class="form-inline" })) {
    @Html.HiddenFor(ss => ss.Name) 
    <button type="submit" class = "hollow button success small">@T("Resume")</button>
} 
@Html.ActionLink(T("Reset").ToString(), "Reset", new { name = Model.Name, area = "CloudBust.Tenants" }, new { @class = "hollow button warning small" })
