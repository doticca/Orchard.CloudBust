@using Orchard.Utility.Extensions;
@{
    var terms = (IEnumerable<Orchard.Taxonomies.Models.TermPart>)Model.Terms;
    //string name = Model.ContentField.DisplayName;
    //var d = new HtmlString(string.Join(", ", terms.Select(t => t.Name).ToArray()));
    //var c = new HtmlString(string.Join(", ", terms.Select(t => t.Slug.Substring(t.Slug.LastIndexOf('/') + 1)).ToArray()));
}
@if (Model.Terms.Count > 0)
{
    foreach (var t in terms)
    {
        <p class="taxonomy-field @(t.Slug.Substring(t.Slug.LastIndexOf('/') + 1)) round">
            @Html.ItemDisplayLink(t.Name, t.ContentItem)
        </p>
    }
}